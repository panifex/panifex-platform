<blueprint 
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0
            http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- ZkPageletTracker -->

    <bean id="zkPageletTracker"
            class="org.panifex.web.zk.ZkPageletTracker">
        <property name="bundleContext" ref="blueprintBundleContext"/>
    </bean>

    <reference-list interface="org.panifex.module.api.PageletMapping"
            availability="optional"
            member-type="service-reference">
        <reference-listener ref="zkPageletTracker"
            bind-method="addPageletMapping"
            unbind-method="removePageletMapping"/>
    </reference-list>

    <reference-list interface="org.panifex.module.zk.api.ZkPagelet"
            availability="optional"
            member-type="service-reference">
        <reference-listener ref="zkPageletTracker"
            bind-method="addPagelet"
            unbind-method="removePagelet"/>
    </reference-list>

    <service ref="zkPageletTracker" 
        interface="java.util.EventListener"/>
</blueprint>