<blueprint 
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0
            http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- Login Pagelet -->

    <bean id="loginPagelet"
        class="org.panifex.web.zk.impl.login.LoginZkPagelet"/>

    <service ref="loginPagelet">
        <interfaces>
            <value>org.panifex.module.zk.api.ZkPagelet</value>
        </interfaces>
    </service>

    <bean id="loginPageletMapping"
            class="org.panifex.module.api.DefaultPageletMapping">
        <argument value="org.panifex.web.zk.impl.login.LoginZkPagelet"/>
        <argument>
            <array value-type="java.lang.String">
                <value>/login</value>
            </array>
        </argument>
    </bean>

    <service ref="loginPageletMapping">
        <interfaces>
            <value>org.panifex.module.api.PageletMapping</value>
        </interfaces>
    </service>

</blueprint>