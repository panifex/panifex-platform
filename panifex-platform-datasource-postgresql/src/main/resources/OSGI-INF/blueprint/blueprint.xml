<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<bean id="postgresqlXADataSource" class="org.postgresql.xa.PGXADataSource">
		<property name="databaseName" value="panifexdb" />
		<property name="databaseName" value="panifexdb" />
		<property name="serverName" value="localhost"/>
		<property name="portNumber" value="5432"/>
		<property name="user" value="postgres"/>
		<property name="password" value="1234"/>
	</bean>

	<service id="PanifexDataSource" ref="postgresqlXADataSource"
		interface="javax.sql.XADataSource">
		<service-properties>
			<entry key="osgi.jndi.service.name" value="jdbc/PanifexDataSource" />
		</service-properties>
	</service>


	<bean id="postgresqlDataSource" class="org.postgresql.ds.PGPoolingDataSource">
		<property name="databaseName" value="panifexdb" />
		<property name="serverName" value="localhost"/>
		<property name="portNumber" value="5432"/>
		<property name="user" value="postgres"/>
		<property name="password" value="1234"/>
	</bean>

	<service id="NoTxPanifexDataSource" ref="postgresqlDataSource"
		interface="javax.sql.DataSource">
		<service-properties>
			<entry key="osgi.jndi.service.name" value="jdbc/NoTxPanifexDataSource" />
		</service-properties>
	</service>

</blueprint>